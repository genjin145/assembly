mixin icon(mod, name)
  if(name)
    svg(class=name + " icon icon_" + mod)
      use(xlink:href="img/svg/symbol/sprite.svg#" + mod)
  else
    svg(class="icon icon_" + mod)
      use(xlink:href="img/svg/symbol/sprite.svg#" + mod)

mixin menu(className)
  if className
    -
      item = className + "-item"
      link = className + "-link"
  else
    -
      item = ""
      link = ""

  ul.main-menu(class=className)
    li.main-menu__item(class=item)
      a.main-menu__link(class=link, href="#services") Main
    li.main-menu__item(class=item)
      a.main-menu__link(class=link, href="#about") About us
    li.main-menu__item(class=item)
      a.main-menu__link(class=link, href="#mortgage") News
    li.main-menu__item(class=item)
      a.main-menu__link(class=link, href="#documents") Documents
